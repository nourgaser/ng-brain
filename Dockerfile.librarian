# Stage 1: Build Go Binary
FROM golang:alpine AS builder
WORKDIR /app
RUN apk add --no-cache git
COPY go.mod go.sum ./
RUN go mod download
COPY librarian.go .
# Static build
RUN CGO_ENABLED=0 go build -o librarian librarian.go

# Stage 2: Runtime
FROM alpine:latest
WORKDIR /app

# INSTALL DOCKER CLI + CURL (For talking to Nginx)
RUN apk add --no-cache docker-cli curl

COPY --from=builder /app/librarian .
CMD ["./librarian"]