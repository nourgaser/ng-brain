FROM ghcr.io/silverbulletmd/silverbullet:latest

# Install Git
RUN apk add --no-cache git

# Configure Identity
RUN git config --system user.email "bot@ng-brain.local" && \
    git config --system user.name "Librarian Bot"

# SAFETY FIX: Whitelist BOTH the Source (/content) and the Mirror (/space)
RUN git config --system --add safe.directory /content && \
    git config --system --add safe.directory /space